{
  "name": "@garden/tokens",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": [
    "./theme.css",
    "./index.css"
  ],
  "files": [
    "theme.css",
    "index.css",
    "README.md",
    "index.d.ts",
    "tokens/**"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.css",
      "style": "./index.css"
    },
    "./theme.css": "./theme.css",
    "./index.css": "./index.css",
    "./tokens": "./tokens/manifest.json",
    "./tokens/*": "./tokens/*"
  },
  "scripts": {
    "build": "node ./scripts/sync-tokens.mjs"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "tailwindcss": "^4.0.0"
  },
  "types": "./index.d.ts",
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  }
}
